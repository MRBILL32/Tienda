package com.tienda.service;

import java.util.List;

import org.springframework.stereotype.Service;

import com.tienda.entity.DetallePedido;
import com.tienda.entity.DetallePedidoId;

@Service
public interface DetallePedidoService {

	DetallePedido guardar(DetallePedido detalle);
	
	List<DetallePedido> listarTodos();
	
	DetallePedido buscarPorId(DetallePedidoId id);
	
	List<DetallePedido> listarPorPedido(Integer idPedido);
	
	List<DetallePedido> listarPorProducto(Integer idProd);
	
	void eliminar(DetallePedidoId id);
}
